<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/etCityName"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/border_edittext"
            android:hint="City name"
            android:layout_weight="70" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:text="Search"
            android:layout_height="45dp"
            android:background="#cca978"
            android:layout_weight="30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/iconWeather"
            android:layout_width="150dp"

            android:scaleType="centerCrop"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="20 Â°C"/>
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor=" #ff5733 "
                tools:text="Landon, US"/>

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tvmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="tempretaure min  "

        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvmax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="tempretaure min "
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvPression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="Pression "
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvlong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="longtiude "
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="latitude "
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvhumi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="l'humidite  "
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvspeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="wind speed "
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvdegre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle=""
        android:paddingHorizontal="10dp"
        tools:text="wind degre "
        android:layout_margin="10dp"/>




</LinearLayout>